<div class="container">
  <div class="col-xs-10 col-xs-offset-1 infoContainer">
    <div class="container-fluid result col-xs-4">
      <img src="<%= info.Poster %>">
    </div>
    <div class="container-fluid result col-xs-6">
      <ul>
        <li>Title: <%= info.Title %></li>
        <li>Year: <%= info.Year %></li>
        <li>Runtime: <%= info.Runtime %></li>
        <li>Genre: <%= info.Genre %></li>
        <li>Director: <%= info.Director %></li>
        <li>Writer: <%= info.Writer %></li>
        <li>Actors: <%= info.Actors %></li>
        <li>Plot: <%= info.Plot %></li>
        <li>Language: <%= info.Language %></li>
        <li>Country: <%= info.Country %></li>
        <li>Awards: <%= info.Awards %></li>
      </ul>
    </div>
    <form action="/search" method="POST">
      <input type="hidden" name="name" value="<%= prevSearch %>">
      <input type="submit" class="btn btn-warning" value="back to search">
    </form>
  </div>
</div>