<% include ../partials/header.ejs%> 

<h1>  <%= favorite.title %> </h1>

<form action="/favorites/<%= favorite.id %>/comments" method="POST" >
	<div class="form-group">
		<input type="text" placeholder="Name: "name="author"></input>
	</div>
	<div class="form-group">
		<textarea placeholder="Please give your opinion " name="content"></textarea>
	</div>
	<input type="submit", class="btn btn-primary"></input>
</form>

<% favorite.comments.forEach(function(comment) { %>

	<div class="well">
		<h1> <%= comment.author %> </h1>
		<p> <%= comment.content %> </p>
	</div>

<% }); %>

<% include ../partials/footer.ejs%> 

