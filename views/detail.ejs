<% // Render individual movie details here %>
<% // This is how to do comments in EJS, by the way... %>
<h1><%= film.Title %></h1>

<p>year: <%= film.Year %> rated: <%= film.Rated %> runtime: <%= film.Runtime %></p>

<% if (film.Poster !== "N/A") { %>
    <img alt="<%= film.Title %>" src="<%= film.Poster %>" />
<% } else { %>
    <p>no film poster found ğŸ˜©</p>
<% } %>

<h2>Directed by: <%= film.Director %></h2>

<h3>Starring: <%= film.Actors %></h3>

<form method="POST" action="/faves">
    <input hidden type="text" value="<%= film.Title %>" name="title" />
    <input hidden type="text" value="<%= film.imdbID %>" name="imdbID" />

    <button type="submit">Add to my faves</button>
</form>


