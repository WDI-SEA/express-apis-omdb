<% // Render your movie details  here %>
<% // This is how to do comments in EJS, by the way... %>
<link rel="stylesheet" href="../css/detail.css">
<div class="header">
    <div>
         <h1>OMDb API - The Open Movie Database </h1>
    </div>
    <form method="GET" action="/movies">
        <label for="omdb-search" id="search">Search</label>
        <!-- id must be = to the for label -->

        <!-- WHY DOES changing the name from search to something not work? -->
        <input type="text" name="q" placeholder="enter your search" id="omdb-search">
        <!-- submit button -->
        <input type="submit" class="submitBtn">
    </form>
</div>
<hr>
<container id="container-detail">
    <h4 class="title"><%= id.Title %></h4>
    <p><%= id.Plot %></p>
    <img class="detail-poster"src="<%= id.Poster %>" alt="">
    <p>Year: <%= id.Year %></p>
    <p>Rated: <%= id.Rated %></p>
    <p>Released: <%= id.Released %></p>
    <p>Runtime: <%= id.Runtime %></p>
    <p>Genre: <%= id.Genre %></p>
    <p>Director: <%= id.Director %></p>
    <p>Writers: <%= id.Writer %></p>
    <p><%= id.Ratings[0].Source %>:  <%=id.Ratings[0].Value %></p>
    <p>Country: <%= id.Country %></p>
    <p>Box Office: <%= id.BoxOffice %></p>
    <p>imdbID: <%= id.imdbID %></p>
    <p>Actors: <%= id.Actors %></p>
    <p>Language: <%= id.Language %></p>
    <p>Awards: <%= id.Awards %></p>
</container>