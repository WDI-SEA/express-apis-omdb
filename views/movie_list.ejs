<head>
	<title>Movie list results for <%= search %></title>
	<style>
		body {
			width: 100%;
			height: 100%;
			position: absolute;
			font-family: sans-serif;
		}
		h1 {
			text-align: center;
			padding: 10px;
		}
		.list {
			position: relative;
			top: 5 %;
			width: 30%;
			margin: 0 auto;
			text-align: center;
			background: rgba(0,0,0,0.7);
			color: white;
			padding: 20px;
			font-size: 18px;
		}
		a:link { 
			text-decoration: none; 
			color: white;
		}
		a:hover {
			color: hotpink;
		}
		a:visited { 
			text-decoration: none; 
			color: hotpink;
		} 
	</style>
</head>
<body> 
	<h1>Movie results for search term: <%= search %></h1>
	<div class = "list">
		<% movies.forEach(function(movie) { %>
			<h3>
				<a href="./movie/<%= movie.imdbID %>"><%= movie.Title%></a>
			</h3>
			<img src="<%= movie.Poster %>">
		<% }); %>
	</div>
</body>