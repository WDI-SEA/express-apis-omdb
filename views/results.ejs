<% // Render your search results here %>
<% // This is how to do comments in EJS, by the way... %>
<h1>Results Page!</h1>


<% if (movieResults.length === 0) { %>
    <p>No results</p>
    <a href="/">Search a different title</a>
<% } else { %>
    <% movieResults.forEach(movie => { %>
        <ul>
            <a href='/movies/<%= movie.imdbID %>'><%= movie.Title %></a>
            <a href="https://www.imdb.com/title/<%=movie.imdbid%>">Check this out on IMDb</a>
        </ul>
    <% }) %>
<% } %>
       