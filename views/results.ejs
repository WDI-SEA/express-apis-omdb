<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Results for <%= movies.Title %></title>
    <% include ./partials/head %>
  </head>
  <body>

    <div class="container">
      <% movies.forEach(function(movie, id) { %>
        <% if (id % 2 !== 0 || id === 0) { %>
        <div class="row">
        <% } %>
        <div class="col s12 m6">
          <div class="card">
            <div class="card-image">
              <img src="<%= movie.Poster %>">
              <!-- <span class="card-title"><%= movie.Title %></span> -->
            </div>
            <div class="card-content">
              <h5><%= movie.Title %></h5>
              <!-- <p><%= movie. %></p> -->
            </div>
            <div class="card-action">
              <a href="/movies/<%= movie.imdbID %>">View More</h1></a>
            </div>
          </div>
        </div>
        <% if (id % 2 !== 0) { %>
          </div>
        <% } %>
      <% }); %>
    </div>

    <% include ./partials/footer %>
  </body>
</html>
