<h1>Search Results for:</h1>
<h2><%= userSearch %></h2>

<% movies.forEach(movie => { %>
    <div>
        <h3><%= movie.Title %></h3>

        <p><%= movie.Year %></p>

        <% if (movie.Poster != 'N/A') { %>
            <img src="<%= movie.Poster %>" alt="<%= movie.Title %>" />
        <% } else { %>
            <p>no movie poster found ðŸ˜¢</p>
        <% } %>

        <div>
            <a href="/movies/<%= movie.imdbID %>">gimme the deets</a>
        </div>
    </div>
<% }) %>
