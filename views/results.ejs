<h2>Movie Results</h2>

<% if(results.length > 0){results.forEach(function(result){ %>
  <h3><%= result.Title %></h3>
  <h4><%-  result.Year %></h4>
  <a href="/movies/<%= result.imdbID %>" class="btn btn-primary">More Info</a>
  <a href="/movies/<%= result.imdbID %>" class="btn btn-primary add-favorites">Add to Favorites</a>
<% }); } else { %>
  <h3>Please enter a search term</h3>
<% } %>
