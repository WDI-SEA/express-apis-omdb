<div class="container">
  <div class="card" id="movieImage">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" src="<%= movieInfo.Poster%>">
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4"><%= movieInfo.Title %><i class="material-icons right">more_vert</i></span>

      <form method="POST" action="/favorites/<%= movieInfo.imdbID %>">
        <input type="hidden" name="favId" value="<%= movieInfo.imdbID %>">
        <input type="hidden" name="favTitle" value="<%= movieInfo.Title %>">
        <input type="hidden" name="favYear" value="<%= movieInfo.Year %>">
        <button type="submit">Add to favorites</button>
      </form>

      <a href="/favorites/<%= movieInfo.imdbID %>/comments">Comments</a>
      <a href="/favorites/<%= movieInfo.imdbID %>/tags">Add a tag</a>
      <br/>
      
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4"><i class="material-icons right">close</i></span>
      <p>
      	<ul>
          <li>Director: <%= movieInfo.Director %></li>
         	<br>
         	<li>Writer: <%= movieInfo.Writer %></li>
         	<br>
         	<li>Actors: <%= movieInfo.Actors %></li>
         	<br>
         	<li>Awards: <%= movieInfo.Awards %></li>
         	<br>
         	<li>Rating: <%= movieInfo.imdbRating %></li>
         	<br>
         	<li>Plot: <%= movieInfo.Plot %></li>
         	<br>
         	<li>Rating: <%= movieInfo.Rated %></li>
         	<br>
         	<li>Runtime: <%= movieInfo.Runtime %></li>
        </ul>
      </p>
    </div>
  </div>

</div>