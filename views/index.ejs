<link rel="stylesheet" href="../css/style.css">
<container id="container-box">
    <h1 class="title">OMDB Movie Search</h1>
    <p class="searchDirection">Search for a movie below...</p>
    <img class="image-box" src="https://media.istockphoto.com/photos/popcorn-and-clapperboard-picture-id1191001701?k=20&m=1191001701&s=612x612&w=0&h=uDszifNzvgeY5QrPwWvocFOUCw8ugViuw-U8LCJ1wu8=" alt="image of a movie">
    <!-- GET method is required [client is sending data]-->
    <!-- action must equal the app.get('___' in index.js) -->
    <form method="GET" action="/movies">
        <label for="omdb-search" id="search">Search</label>
        <!-- id must be = to the for label -->

        <!-- WHY DOES changing the name from search to something not work? -->
        <input type="text" name="q" placeholder="enter your search" id="omdb-search">
        <!-- submit button -->
        <input type="submit" class="submitBtn">
    </form>
</container>