<% include ../partials/header.ejs %>

<h1>Favorites:</h1>

<% films.forEach(function(favorite) { %>

<div class="row">
    <div class="col s12 m6">
      <div class="card hoverable blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title"><%= favorite.title %></span>
          <p>Year: <%= favorite.year %></p>
          <p>IMDB ID: <%= favorite.imdbCode %></p>
        </div>
        <div class="card-action">
          <a href="/movie/<%= favorite.imdbCode %>">
          More Details
          </a>  
        </div>
        <a href="/favorites/<%= favorite.id %>/comments">
          <button class="waves-effect waves-light btn">Comments</button>
        </a>
      </div>
    </div>
 </div>
            


<% }); %>

